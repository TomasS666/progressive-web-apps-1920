<%- include('components/head.ejs') %>

<body>
    <%- include('components/header.ejs') %>
    <main id="content">
        <h2>Results: <%= query.query %></h2>
        <nav>
            <!-- <a href="<%= query.url %>">Next</a> -->
            Page <%= query.page %> of <%= meta %>
            <a href="<%= prevPage  %>" class="<%= query.page == 1 ? 'inactive': 'active'%>">Previous</a>
            <a href="<%= nextPage  %>" class="<%= query.page >= meta ? 'inactive': 'active'%>">Next</a>
        </nav>
        <div class="wrapper">
           
        <% data.forEach((movie)=> { %>
            
                
                    <article class="loading">
                        
                        <h3><%= movie.title %></h3>
                        <a href="movie/<%= movie.id%>/<%= movie.title.replace(/\s+/g, '-').toLowerCase(); %>">
                        <img src="<%= movie.poster_path %>" alt="<%= movie.title %>">
                    </a>
                        <div data-ui="rating"><%= movie.vote_average %></div>
                  
                    </article>
              

            <%})%>   
        </div>

    </main>
    <%- include('components/footer.ejs') %>
